<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:background="@drawable/app_background" android:layout_height="fill_parent" android:weightSum="1" android:drawingCacheQuality="high">
	<TextView android:gravity="center"
		android:textSize="30dp" android:background="@drawable/title_of_app"
		android:color="#40000000" android:layout_width="fill_parent" android:layout_height="100dp"/>
	<EditText android:hint="@string/HintStatuseditbox" android:id="@+id/editStatus" android:textStyle="bold" android:layout_height="170dp" android:layout_width="270dp" android:layout_marginLeft="25dp" android:layout_marginTop="20dp" android:background="@layout/rounded_corners" android:gravity="top" android:textSize="23dp" android:typeface="sans" android:paddingLeft="10dp" android:paddingTop="5dp">
		<requestFocus></requestFocus>
	</EditText>
	<Button android:layout_width="fill_parent"
		android:textSize="25dp" android:id="@+id/buttonUpdate" android:background="@drawable/update_button" android:clickable="true" android:layout_height="fill_parent"></Button>
</LinearLayout>
